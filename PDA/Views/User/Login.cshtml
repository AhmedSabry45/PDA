@{
    Layout = null;
}
@model LoginVM;
<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DPW Sokhna | PDA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SecurityViolation.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <div class="opact">
        <div>

            <div class="transparent-div">

                @if (ViewBag.LoginExpired is not null)
                {
                    <div class="container mt-1">
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert" style="text-align:center;">
                                @ViewBag.LoginExpired
                            </div>
                        </div>
                    </div>
                }

                <div class="row ">
                    <img src="~/Imgs/logo_w.png" style="width: 15rem; margin-left: auto; margin-right: auto; display: flex" />
                    <h2 style="color:white" class="h3 ">PDA</h2>
                </div>

                <div class="row mt-2 mb-4 text-center">
                    @* <h2 style="font-weight: bold; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; text-align:center">Active Directory Login</h2> *@
                </div>
                <hr />
                <div class="formOfLogin">
                    <form asp-controller="User" asp-action="Login" method="post" class="login-form">

                        <div class="row">


                            <div>
                                <input type="text" id="username" class="form-control input100 input-group  @(string.IsNullOrEmpty(ViewBag.LoginError) ? "" : "error-border")" name="UserName" asp-for="UserName" placeholder="User Name" required>


                            </div>
                            <div>


                                <input type="password" id="password" class="form-control input100  input-group   @(string.IsNullOrEmpty(ViewBag.LoginError) ? "" : "error-border")" name="Password" asp-for="Password" placeholder="Password" required>

                            </div>

                            @if (!string.IsNullOrEmpty(ViewBag.LoginError))
                            {
                                <p class="error-message">
                                    @ViewBag.LoginError
                                </p>
                            }

                            <div class="Box-Button">
                                <button type="submit" class="login100-form-btn login-form-margin">Login</button>
                            </div>
                        </div>
                    </form>
                </div>


            </div>

            @*     <footer class="text-muted d-flex justify-content-center">
            2-FUSION - Developed by DPW Sokhna development team &copy; 2024
            </footer> *@
        </div>

    </div>
</body>

</html>


<style>
    body {
