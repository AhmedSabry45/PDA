                    <input type="text" id="lastContainerTime" asp-for="LastContainerTime" class="form-control" required />
                    <span asp-validation-for="LastContainerTime" class="text-danger"></span>
                </div>

                <div class="mb-3 itemInsideRight">
                    <label for="lashingCompletionTime" class="form-label">Lashing Completion Time</label>
                    <input type="text" id="lashingCompletionTime" asp-for="LashingCompletionTime" class="form-control" required />
                    <span asp-validation-for="LashingCompletionTime" class="text-danger"></span>
                </div>
            </div> *@

            @* <div class="box">
