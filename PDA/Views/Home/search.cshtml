@model VesselVoyage

<div class="container-form">
    <form asp-action="SubmitLashingForm" asp-controller="Lashing" method="post">
        <div class="row">
            <h3>Lashing Completion Advice</h3>

            <div>
                <div class="mb-3">
                    <label for="vesselName" class="form-label">Vessel Name</label>
                    <input type="text" id="vesselName" asp-for="VesselName" class="form-control" required />
                    <span asp-validation-for="VesselName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="voyageNumber" class="form-label">Voyage Number</label>
                    <input type="text" id="VoyageId" asp-for="Id" class="form-control" required />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="rotationNumber" class="form-label">Rotation Number</label>
                    <input type="text" id="rotationNumber" asp-for="RotationNumber" class="form-control" required />
                    <span asp-validation-for="RotationNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="box">
                <h5>Declaration</h5>
                <p>
                    I undersigned accept that all the lashing has been carried out satisfactorily
                    on all hatches, bays, and decks worked at DP World Sokhna on the above-mentioned vessel.
                </p>
            </div>

            <div class="box">
                <div class="mb-3 itemInsideLeft">
                    <label for="ChiefName" class="form-label">Chief Officer Name</label>
                    <input type="text" id="ChiefOfficerName" asp-for="ChiefOfficerName" class="form-control" required />
                    <span asp-validation-for="ChiefOfficerName" class="text-danger"></span>
                </div>

