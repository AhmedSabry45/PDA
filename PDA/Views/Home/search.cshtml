            </div>

            <div class="box">
                <div class="mb-3 itemInsideLeft">
                    <label for="SupervisorName" class="form-label">Supervisor Name</label>
                    <input type="text" id="SupervisorName" asp-for="SupervisorName" class="form-control" required />
                    <span asp-validation-for="SupervisorName" class="text-danger"></span>
                </div>

               @*  <div class="mb-3 itemInsideRight">
                    <label for="SupervisorSignature" class="form-label">Supervisor Signature</label>
                    <input type="text" id="SupervisorSignature" asp-for="SupervisorSignature" class="form-control" required />
                    <span asp-validation-for="SupervisorSignature" class="text-danger"></span>
                </div> *@
            </div>

            @* <div class="box">
