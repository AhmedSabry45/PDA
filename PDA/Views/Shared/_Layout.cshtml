<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PDA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PDA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" />
    <link type="text/css" href="//gyrocode.github.io/jquery-datatables-checkboxes/1.2.12/css/dataTables.checkboxes.css" rel="stylesheet" />
    @*    <link href="~/lib/bootstrap/dist/css/bootstrap-Chosen.css" rel="stylesheet" /> *@
    <style>
        /* Custom styles for the toggle button */
        .navbar-toggler-icon {
            color: white; /* Adjust color as needed */
        }

        /* Custom styles for the collapsed menu items */
        @@media (max-width: 578px) {
            .navbar-collapse {
                background: linear-gradient(to right, #1E1343, #312A82,#5154B6);
                padding: 10px; /* Add some padding if needed */
            }

                .navbar-collapse .nav-link {
                    color: white; /* Text color for the collapsed menu items */
                }
        }

        .mx-3 {
            border-right: 2px solid #b8b6eb36;
            border-left: 2px solid #b8b6eb36;
        }

        .Items {
            padding-top: 12px;
            font-family: 'pilat-Demi';
        }

            .Items:hover {
                background: var(--primary-color2);
            }
    </style>
</head>
<body>
   
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background: linear-gradient(to right, #1E1343, #312A82,#5154B6); height: 4.2rem;">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("search", "Home")" style="font-weight: bolder; color: white; margin-right: 2rem;">

                    <img src="~/imgs/logo_w.png" alt="Logo" style="width: 10rem;margin-left: 10px;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav" style="justify-content: end;">
                    <ul class="navbar-nav" style="margin:100px;">

                        <li class="mx-3 nav-item">
                            <a class="nav-link text-white Items" style="font-weight: bold;font-size: x-large;" href="@Url.Action("search", "Home")">Lanshing</a>
                        </li>

                        <li class="mx-3 nav-item">
                            <a class="nav-link text-white Items" style="font-weight: bold;font-size: x-large;" href="@Url.Action("container", "Container")"> Damage Container</a>
                        </li>


                    </ul>
                    <a class="navbar-brand text-white" href="@Url.Action("Logout", "User")" style="font-weight: bolder;">
                        Log Out <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <br />
    <footer class="border-top footer text-muted">

        <div class="container">
            PDA - &copy; 2024
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
